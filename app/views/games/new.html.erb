<h1>New Game</h1>
<ul class="list-inline"><%@letters.each do |letter|%>
    <li class="list-inline-item"><%= letter %></li>
  <%end%></ul>


<p>What is the longest word you can find?</p>

<form action="/games/score">
  <input type="text" name="guess">
  <input type="submit" name="Play" value="Play">
  <input id="grid" name="grid" type="hidden" value="#{@letters}"/>
</form>
